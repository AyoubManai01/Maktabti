<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.LandingPageController"
            prefWidth="650" prefHeight="450"
            stylesheets="@styles.css">
    <!-- StackPane to layer elements -->
    <StackPane prefWidth="650" prefHeight="450">
        <!-- Background Image -->
        <ImageView fitWidth="650" fitHeight="450" preserveRatio="false">
            <image>
                <Image url="@Library.png"/>
            </image>
        </ImageView>
        <!-- Semi-transparent overlay -->
        <Pane style="-fx-background-color: rgba(0, 0, 0, 0.5);" prefWidth="650" prefHeight="450"/>
        <!-- Main UI -->
        <VBox alignment="CENTER" spacing="25" prefWidth="350">
            <!-- Title with Neon Glow -->
            <Text text="Library Management System" fill="white"
                  style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-font-family: 'Arial';
                         -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.5), 10, 0.5, 0, 0);"/>
            <!-- Enhanced Buttons -->
            <Button text="Sign In as Member" fx:id="memberSignInBtn" onAction="#handleMemberSignIn" styleClass="glass-button"/>
            <Button text="Sign Up as Member" fx:id="memberSignUpBtn" onAction="#handleMemberSignUp" styleClass="glass-button"/>
            <Button text="Sign In as Admin" fx:id="adminSignInBtn" onAction="#handleAdminSignIn" styleClass="glass-button"/>
        </VBox>
    </StackPane>
</AnchorPane>