<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="Controllers.checkoutController">

    <VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="15">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Book Checkout" />

        <!-- Book Details Section -->
        <GridPane hgap="10" vgap="10">
            <Label text="Book Title:" />
            <TextField fx:id="bookTitleField" editable="false" />

            <Label text="Author:" />
            <TextField fx:id="authorField" editable="false" />

            <Label text="ISBN:" />
            <TextField fx:id="isbnField" editable="false" prefHeight="26.0" prefWidth="370.0" />
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Member Details Section -->
        <GridPane hgap="10" vgap="10">
            <Label text="Member ID:" />
            <TextField fx:id="memberIdField" />

            <Label text="Member Name:" />
            <TextField fx:id="memberNameField" prefHeight="26.0" prefWidth="375.0" />
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Checkout Options -->
        <GridPane hgap="10" vgap="10">
            <Label text="Due Date:" />
            <DatePicker fx:id="dueDatePicker" prefHeight="26.0" prefWidth="382.0" />
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="cancelButton" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
            <Button fx:id="checkoutButton" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Confirm Checkout" />
        </HBox>
    </VBox>

</AnchorPane>
