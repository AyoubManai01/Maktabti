<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.checkoutController"
            stylesheets="@styles.css">

    <!-- Main Container -->
    <VBox spacing="15" alignment="CENTER" prefWidth="600" prefHeight="500"
          style="-fx-background-color: rgba(255, 255, 255, 0.85); -fx-padding: 20px; -fx-background-radius: 10px;"
          styleClass="vbox-container">

        <Label text="Checkout Page" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Table of Purchased Books -->
        <TableView fx:id="booksTable" prefHeight="250">
            <columns>
                <TableColumn text="Book Title" fx:id="bookTitleColumn" prefWidth="250"/>
                <TableColumn text="Price ($)" fx:id="priceColumn" prefWidth="100"/>
                <TableColumn text="Quantity" fx:id="quantityColumn" prefWidth="100"/>
            </columns>
        </TableView>

        <!-- Total Amount -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Total Purchase:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="totalAmountLabel" text="0.00" style="-fx-font-size: 16px; -fx-text-fill: #2ecc71;"/>
        </HBox>

        <!-- Payment Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Pay with Cash" fx:id="cashButton" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 10px;"/>
            <Button text="Pay with Credit Card" fx:id="creditCardButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px;"/>
            <Button text="Pay with Check" fx:id="checkButton" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 10px;"/>
        </HBox>

    </VBox>

</AnchorPane>
