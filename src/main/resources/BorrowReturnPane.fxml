<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.maktabti.Controllers.BorrowReturnController">
    <children>
        <Label text="Enter Book ID:" layoutX="20" layoutY="20"/>
        <TextField fx:id="bookIdField" layoutX="20" layoutY="50" promptText="Book ID"/>
        <Button text="Borrow" layoutX="20" layoutY="100" onAction="#borrowBook" styleClass="button"/>
        <Button text="Return" layoutX="140" layoutY="100" onAction="#returnBook" styleClass="button"/>
        <Label fx:id="messageLabel" layoutX="20" layoutY="150"/>
    </children>
</AnchorPane>
